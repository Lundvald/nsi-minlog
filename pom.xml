	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<repositories>
		<repository>
			<id>trifork.nexus</id>
			<url>https://nexus.trifork.com/content/repositories/snapshots/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>trifork.public</id>
			<url>https://nexus.trifork.com/content/groups/public/</url>
		</repository>
	</repositories>
	<modelVersion>4.0.0</modelVersion>

	<groupId>dk.minlog</groupId>
	<artifactId>minlog</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<scm>
		<url>https://code.trifork.com/nsi-minlog</url>
		<connection>scm:hg:https://code.trifork.com/nsi-minlog</connection>
		<developerConnection>scm:hg:https://code.trifork.com/nsi-minlog</developerConnection>
	</scm>
	<issueManagement>
		<system>JIRA</system>
		<url>https://TODO.trifork.com/</url>
	</issueManagement>
	<ciManagement>
		<system>Jenkins</system>
		<url>https://ci82.trifork.com/job/nsi-minlog/</url>
	</ciManagement>
	<modules>
		<module>minlogudtraekservice</module>
	</modules>

	<properties>
		<!-- Functional testing -->
		<!-- <functionaltest.serverport>8085</functionaltest.serverport> <functionaltest.urlprefix>http://localhost:${functionaltest.serverport}</functionaltest.urlprefix> -->

